# Brewfile - Declarative package management for macOS
# Usage: brew bundle install

# Taps
tap "homebrew/bundle"
tap "homebrew/cask"

###################################################################################
# Programming Languages
###################################################################################
brew "go"
brew "python@3"
# Note: Node.js managed via nvm (installed by scripts/install-macos.sh)

###################################################################################
# CLI Tools
###################################################################################
brew "ripgrep"      # Modern grep replacement (aliased as 'grep' in .localrc)
brew "fd"           # Modern find replacement (aliased as 'find' in .localrc)
brew "bat"          # Cat with syntax highlighting
brew "tree"         # Directory tree visualization
brew "jq"           # JSON processor
brew "stow"         # Symlink farm manager for dotfiles

###################################################################################
# Development Tools
###################################################################################
brew "neovim"       # Modern vim
brew "tmux"         # Terminal multiplexer
brew "git"          # Version control

###################################################################################
# Terminal Emulators
###################################################################################
cask "ghostty"      # Fast, feature-rich terminal
cask "alacritty"    # GPU-accelerated terminal

###################################################################################
# Additional Tools
###################################################################################
# Note: slides CLI installed from GitHub by scripts/install-macos.sh
# Note: oh-my-zsh and plugins installed by scripts/install-macos.sh
# Note: tmux plugin manager installed by scripts/install-macos.sh
