set $background  #191724
set $foreground  #e0def4
set $white       #e0def4
set $alert       #ebbcba

# class                 border            bground           text            indicator      child_border
client.focused          $foreground      $foreground        $white          $foreground   $foreground
client.focused_inactive $foreground      $foreground        $foreground     $foreground   $background
client.unfocused        $background      $black             $white          $background    $background
client.urgent           $white           $alert         $white          $alert-red     $alert-red
client.placeholder      $background      $black             $white          $background    $background
client.background       $white

bar {
  font pango:System San Francisco Display 12

  colors {
    background $background
    statusline $white
    separator  $foreground

    focused_workspace  $background  $background $alert
    active_workspace   $background  $background $alert
    inactive_workspace $background  $background $white
    urgent_workspace   $alert   $alert   $white
    binding_mode       $alert   $alert   $white
  }

  status_command i3blocks -c ~/.config/i3/i3blocks.conf
  position top
}
